<div class="row">
  <div class="col-md-2">
    <%= render partial: "layouts/user_menu" %>
  </div>
  <div class="col-md-10">
    <h1> Locations </h1>
  </div>
</div>
<div class="table-striped table-responsive">
  <table class="table">
    <thead>
    <th>                Name              </th>
    <th>                Description              </th>
    <th>                Address              </th>
    <th>                Map              </th>
    <th>                # Slots              </th>
    <th>                Actions             </th>
    </thead>
    <tbody>
      <% @locations.each do |location|%>
        <tr>
        <td><%= location.name %></td>
        <td><%= location.description %></td>
        <td><%= location.address %></td>
          <% unless location.latitude.nil? && location.longitude.nil? %>
            <td>
              <%= image_tag "http://maps.google.com/maps/api/staticmap?size=150x150&sensor=false&zoom=14&markers=#{location.latitude}%2C#{location.longitude}" %>
            </td>
          <%end%>
        <td><%= link_to location.max_slots, location_slots_path(location) %> </td>                      
        <td>
          <div class="row">
            <%= link_to "Edit",
                      edit_location_path(location),
                      class: 'btn btn-default' %>
            <%= link_to "Delete",
                location_path(location), method: 'delete',
                class: 'btn btn-danger',
                data: {confirm: "Are you sure?"} %>
          </div>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="row">
  <%= link_to "Add location",
  new_location_path,
  class: 'btn btn-default btn-md'%>
</div>
