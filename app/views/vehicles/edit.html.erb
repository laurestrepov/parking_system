<h3 class="text-center"> Update Vehicle info</h3>
<%= form_for @vehicle, url: {action: 'update'} do |form| %>
  <div class="row">
    <div class="col-md-6">
      <%= form.label :model, for:'model'%>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.text_field :model, class:'form-control', required: true%>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= form.label :year %>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.select :year, (Time.zone.now.year - 100)..(Time.zone.now.year), class: 'form-control', required: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= form.label :vin %>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.text_field :vin, required: true, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= form.submit "Update", class: 'btn btn-success'%>
    <%= link_to "Cancel", user_vehicles_path(current_user), class: 'btn btn-default'%>
  </div>
<% end %>
